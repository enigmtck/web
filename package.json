{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"wasm": "wasm-pack build ../wasm/enigmatick_wasm --target web",
		"olm": "wasm-pack build ../wasm/enigmatick_olm --target web",
		"dev": "yarn wasm && yarn olm && vite",
		"build": "yarn wasm && yarn olm && vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"@types/showdown": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.2",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.57.1",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"svelte-language-server": "^0.15.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.3",
		"vite-plugin-wasm-pack": "^0.1.12"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-node": "^1.2.2",
		"showdown": "^2.1.0"
	}
}
